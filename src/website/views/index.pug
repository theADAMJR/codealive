doctype
html(lang='en')
  head
    include includes/header
    +metaTags

    link(rel='stylesheet', href='/css/index.css')
    script(src='/js/index.js', defer)
  body
    include includes/navbar

    .header.text-center.bg-transparent.text-light
      img.mb-2(src='/img/icon.png')
      h1.display-4.text-dark Learn to Code Online
      |
      button.subscribe-button.center-content
        span.button-description Subscribe
        |
        form(action='/subscribe', method='POST')
          .form-header
            | Newsletter
          .description Join our mailing list
            div.badge.badge-success.ml-2 EARLY ACCESS
          input#name(type='text', placeholder='Name', name='name')
          input#email(type='email', placeholder='Email', name='_id')
          alert#formError.alert-danger
          span.confirm-button Subscribe
    include includes/footer